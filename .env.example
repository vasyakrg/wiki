# Backup settings
#
S3_APPLICATION_KEY=<PAST_HERE>
S3_ACCOUNT_ID=V<PAST_HERE>
S3_HOST_BASE=<PAST_HERE>
S3_BACKET=<PAST_HERE>
S3_PATH=<PAST_HERE>

BACKUP_DIR=
BACKUP_SCHEDULE=4 4 * * Sun
